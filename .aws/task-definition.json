{
  "family": "masasia-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "masasia-api",
      "image": "ACCOUNT_ID.dkr.ecr.ap-southeast-1.amazonaws.com/masasia-api:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp",
          "hostPort": 3000
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "AWS_REGION",
          "value": "ap-southeast-1"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:ap-southeast-1:ACCOUNT_ID:parameter/masasia/DATABASE_URL"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:ssm:ap-southeast-1:ACCOUNT_ID:parameter/masasia/REDIS_URL"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:ssm:ap-southeast-1:ACCOUNT_ID:parameter/masasia/JWT_SECRET"
        },
        {
          "name": "JWT_REFRESH_SECRET",
          "valueFrom": "arn:aws:ssm:ap-southeast-1:ACCOUNT_ID:parameter/masasia/JWT_REFRESH_SECRET"
        },
        {
          "name": "PAYMONGO_SECRET_KEY",
          "valueFrom": "arn:aws:ssm:ap-southeast-1:ACCOUNT_ID:parameter/masasia/PAYMONGO_SECRET_KEY"
        },
        {
          "name": "TWILIO_ACCOUNT_SID",
          "valueFrom": "arn:aws:ssm:ap-southeast-1:ACCOUNT_ID:parameter/masasia/TWILIO_ACCOUNT_SID"
        },
        {
          "name": "TWILIO_AUTH_TOKEN",
          "valueFrom": "arn:aws:ssm:ap-southeast-1:ACCOUNT_ID:parameter/masasia/TWILIO_AUTH_TOKEN"
        },
        {
          "name": "SENDGRID_API_KEY",
          "valueFrom": "arn:aws:ssm:ap-southeast-1:ACCOUNT_ID:parameter/masasia/SENDGRID_API_KEY"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3000/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/masasia-api",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    }
  ],
  "tags": [
    {
      "key": "Project",
      "value": "masasia"
    },
    {
      "key": "Environment",
      "value": "production"
    }
  ]
}
